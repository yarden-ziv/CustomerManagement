@model CustomerManagement.ViewModels.CreateCustomerViewModel

@{
    ViewData["Title"] = "Create Customer";
}

<h2>צור לקוח חדש</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<form asp-action="Create" method="post">

    <!-- Hebrew Full Name -->
    <div class="mb-3">
        <label asp-for="FullNameHeb" class="form-label"></label>
        <input asp-for="FullNameHeb" class="form-control" />
        <span asp-validation-for="FullNameHeb" class="text-danger"></span>
    </div>

    <!-- English Full Name -->
    <div class="mb-3">
        <label asp-for="FullNameEng" class="form-label"></label>
        <input asp-for="FullNameEng" class="form-control" />
        <span asp-validation-for="FullNameEng" class="text-danger"></span>
    </div>

    <!-- Birth Date -->
    <div class="mb-3">
        <label asp-for="BirthDate" class="form-label"></label>
        <input asp-for="BirthDate" type="date" max='@DateTime.Now.ToString("yyyy-MM-dd")' class="form-control" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>

    <!-- ID Number -->
    <div class="mb-3">
        <label asp-for="IdNumber" class="form-label"></label>
        <input asp-for="IdNumber" maxlength="9" class="form-control" />
        <span asp-validation-for="IdNumber" class="text-danger"></span>
    </div>

    <!-- City Dropdown -->
    <div class="mb-3">
        <label asp-for="CityId" class="form-label"></label>
        <select asp-for="CityId" class="form-select"
                asp-items="@(new SelectList(Model.Cities, "Id", "Name"))">
            <option value="">-- בחר עיר --</option>
        </select>
        <span asp-validation-for="CityId" class="text-danger"></span>
    </div>

    <!-- Bank Dropdown -->
    <div class="mb-3">
        <label asp-for="BankId" class="form-label"></label>
        <select asp-for="BankId" class="form-select" id="bankDropdown">
            <option value="">-- בחר בנק --</option>
            @foreach (var bank in Model.Banks)
            {
                <option value="@bank.Code">@bank.Description</option>
            }
        </select>
        <span asp-validation-for="BankId" class="text-danger"></span>
    </div>

    <!-- Branch Dropdown -->
    <div class="mb-3">
        <label asp-for="BranchId" class="form-label"></label>
        <select asp-for="BranchId" class="form-select" id="branchDropdown">
            <option value="">-- בחר סניף --</option>
            @if (Model.Branches != null)
            {
                foreach (var branch in Model.Branches)
                {
                    <option value="@branch.BranchNumber">@branch.BranchName</option>
                }
            }
        </select>
        <span asp-validation-for="BranchId" class="text-danger"></span>
    </div>

    <!-- Account Number -->
    <div class="mb-3">
        <label asp-for="AccountNumber" class="form-label"></label>
        <input asp-for="AccountNumber" maxlength="10" class="form-control" />
        <span asp-validation-for="AccountNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">שמור פרטי לקוח</button>

</form>


<a href="/Customers/List" class="btn btn-back mt-3">חזרה לרשימת לקוחות</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.getElementById("bankDropdown").addEventListener("change", async function () {
            const bankCode = this.value;
            const branchDropdown = document.getElementById("branchDropdown");

            // Always reset the dropdown to a clean state
            branchDropdown.innerHTML = "<option value=''>-- בחר סניף --</option>";

            // No bank selected → keep clean default state
            if (!bankCode) {
                branchDropdown.disabled = false; 
                return;
            }

            // Call server for branches
            const response = await fetch(`/Customers/GetBranches?bankCode=${bankCode}`);
            const branches = await response.json();

             // Sort branches alphabetically by name
            branches.sort((a, b) => a.branchName.localeCompare(b.branchName));

            // Populate branches safely
            branches.forEach(b => {
                branchDropdown.insertAdjacentHTML(
                    "beforeend",
                    `<option value="${b.branchNumber}">${b.branchName}</option>`
                );
            });
        });
    </script>
}